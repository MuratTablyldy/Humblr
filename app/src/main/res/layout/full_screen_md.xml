<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m_root"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exo_player"
            android:layout_width="match_parent"
            app:controller_layout_id="@layout/controller_layout_full_mode"
            app:resize_mode="fit"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <fragment
        android:tag="draging_view"
        app:behavior_peekHeight="0dp"
        android:id="@+id/filter_fragment"
        android:name="ru.skillbox.humblr.detailReddits.WindowFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_skipCollapsed="false"
        app:layout_behavior=".utils.MBottomSheetBehavior"
        tools:layout="@layout/fragment_window"
        app:navGraph="@navigation/nav_frag"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
